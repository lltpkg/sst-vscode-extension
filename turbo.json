{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "apps/**/*", "packages/**/*", ".env*"],
      "outputs": ["dist/**", "!dist/cache/**", ".sst/**", "build/**"],
      "cache": true
    },
    "deploy": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "apps/**/*", "packages/**/*", ".env*"],
      "outputs": ["extensions/**"],
      "cache": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "inputs": [
        "!node_modules/**",
        "!dist/**",
        "**/vitest.config.*",
        "**/*.env",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.json",
        "**/*.md",
        "**/*.css",
        "**/*.html"
      ],
      "dependsOn": ["^test", "^build"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "apps/**/*", "packages/**/*", ".env*"]
    }
  }
}
