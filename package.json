{
  "name": "sst-vscode-extension-workspace",
  "private": true,
  "scripts": {
    "prepare": "bash ./scripts/prepare.bash",
    "concurrently": "concurrently --success all --prefix \"[{name}]\" ",
    "new-branch": "pnpm exec git-branch-lint --branch",
    "test": "pnpm turbo run test",
    "build": "pnpm turbo run build",
    "shellcheck:lint": "bash ./scripts/shellcheck.bash",
    "shellcheck": "shellcheck -a -x --rcfile=.shellcheckrc",
    "lint": "pnpm turbo run lint",
    "gen-deps-graphs": "bash ./scripts/gen-deps-graphs.sh",
    "commitlint": "commitlint --edit",
    "clean": "pnpx concurrently -n 'clean:modules,clean:build,clean:turbo' 'pnpm run clean:modules' 'pnpm run clean:build' 'pnpm run clean:turbo'",
    "clean:modules": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:build": "rm -rf apps/*/dist packages/*/dist apps/sls/.sst",
    "clean:turbo": "rm -rf .turbo apps/*/.turbo packages/*/.turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-workspace-scopes": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@elsikora/git-branch-lint": "^1.1.2",
    "@tsconfig/node22": "catalog:",
    "@types/node": "^22.17.2",
    "@typescript/native-preview": "7.0.0-dev.20250820.1",
    "concurrently": "^9.2.0",
    "cspell": "9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "turbo": "^2.5.6",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22"
  },
  "elsikora": {
    "git-branch-lint": {
      "branches": {
        "feat": {
          "title": "Feature",
          "description": "✨ New functionality"
        },
        "fix": {
          "title": "Bugfix",
          "description": "🐛 Bug fixes"
        },
        "hotfix": {
          "title": "Hotfix",
          "description": "🚑 Urgent production fixes"
        },
        "release": {
          "title": "Release",
          "description": "📦 Release preparation"
        },
        "chore": {
          "title": "Chore",
          "description": "🔧 Maintenance tasks"
        },
        "docs": {
          "title": "Docs",
          "description": "📚 Documentation"
        },
        "style": {
          "title": "Style",
          "description": "💄 Styling"
        },
        "refactor": {
          "title": "Refactor",
          "description": "♻️ Code refactoring"
        },
        "perf": {
          "title": "Performance",
          "description": "⚡ Performance improvements"
        },
        "test": {
          "title": "Test",
          "description": "✅ Testing"
        },
        "build": {
          "title": "Build",
          "description": "📦 Build system"
        },
        "ci": {
          "title": "CI",
          "description": "👷 CI/CD"
        }
      },
      "ignore": [
        "master",
        "release"
      ],
      "rules": {
        "branch-prohibited": [
          "master",
          "release"
        ],
        "branch-min-length": 8,
        "branch-max-length": 60
      }
    }
  }
}
