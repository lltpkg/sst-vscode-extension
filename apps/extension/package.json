{
  "name": "sst-vsc-ext",
  "displayName": "SST Handler Autocomplete",
  "description": "VSCode extension providing autocomplete for SST function handlers",
  "version": "0.0.2",
  "publisher": "kairiss",
  "icon": "icon.png",
  "author": {
    "name": "Kai (Thien Ly)",
    "email": "43800313+lyluongthien@users.noreply.github.com",
    "url": "https://thediligentengineer.com"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sst-vsc-ext.refreshHandlers",
        "title": "Refresh SST Handlers"
      }
    ]
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyluongthien/sst-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/lyluongthien/sst-vscode-extension/issues"
  },
  "homepage": "https://github.com/lyluongthien/sst-vscode-extension",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "sst",
    "serverless",
    "aws",
    "lambda",
    "autocomplete",
    "typescript",
    "handler",
    "infrastructure"
  ],
  "scripts": {
    "watch": "tsc -watch -p .",
    "test": "if [ \"$(uname -s)\" = \"Linux\" ]; then pnpm run test:linux; else pnpm run test:common; fi",
    "test:common": "vscode-test --config .vscode-test.mjs",
    "test:linux": "xvfb-run -a vscode-test --config .vscode-test.mjs",
    "test:watch": "vscode-test --watch",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "check-types": "tsc --noEmit",
    "lint": "biome check",
    "vscode:prepublish": "pnpm run build:ts --minify",
    "build:test": "tsc -p tsconfig.json",
    "build:ts": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --define:process.env.NODE_ENV='\"production\"'",
    "cspell": "cspell -c ../../.cspell.json './**/*' '!*lock.yaml' '!**/*.mermaid' '!**/*.svg'",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "publish:ovsx": "npx ovsx publish --no-dependencies",
    "publish:all": "pnpm run publish && pnpm run publish:ovsx",
    "build": "rm -rf dist && pnpm build:test && pnpm build:ts",
    "build:vsx": "rm -rf dist && pnpm build:ts && pnpm package && mv *.vsix ../../extensions/ && echo 'Extension deployed to extensions/ directory'",
    "deploy": "pnpm build:vsx"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.17.2",
    "@types/vscode": "1.74.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "glob": "^10.4.5",
    "mocha": "^11.7.1",
    "ovsx": "^0.10.5",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@cute-me-on-repos/sst-analyzer": "workspace:*"
  }
}
